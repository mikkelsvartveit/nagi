{
  "name": "svelte-pocketbase-template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "install:pocketbase": "node scripts/pocketbase-install.js",
    "dev:sveltekit": "pnpm run typegen && vite dev --host",
    "dev:pocketbase": "cd pocketbase && ./pocketbase serve",
    "dev": "pnpm run --parallel '/^dev:.*/'",
    "build": "pnpm check && vite build",
    "preview": "vite preview",
    "typegen": "pocketbase-typegen --db ./pocketbase/pb_data/data.db --out src/lib/pocketbase-typegen.ts",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write --list-different ."
  },
  "devDependencies": {
    "@iconify-json/lucide": "^1.2.90",
    "@iconify/tailwind4": "^1.2.1",
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.561.0",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.50.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/eslint": "^9.6.1",
    "bits-ui": "^2.14.4",
    "clsx": "^2.1.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.1.0",
    "pocketbase": "^0.26.6",
    "pocketbase-typegen": "^1.3.3",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.48.0",
    "svelte-check": "^4.3.5",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1"
  },
  "type": "module"
}
